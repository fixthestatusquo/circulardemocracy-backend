{
  "name": "circulardemocracy-backend",
  "version": "1.0.0",
  "description": "Backend API for Circular Democracy - processing citizen messages to politicians",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev src/index.ts --local",
    "deploy": "wrangler deploy --minify src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "biome lint src/",
    "lint:fix": "biome lint src/ --write",
    "format": "biome format src/",
    "format:fix": "biome format src/ --write",
    "check": "biome check src/",
    "check:fix": "biome check src/ --write",
    "docs:spec": "tsx scripts/generate-spec.ts",
    "docs:html": "redocly build-docs doc/openapi.json --output doc/openapi.html",
    "docs:md": "widdershins doc/openapi.json -o doc/openapi.md",
    "docs:build": "npm run docs:spec && npm run docs:html && npm run docs:md",
    "db:start": "supabase start",
    "db:reset": "supabase db reset",
    "db:push": "supabase db push",
    "db:diff": "supabase db diff -f"
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.8.0",
    "hono": "^4.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.0",
    "@cloudflare/workers-types": "^4.20240208.0",
    "@redocly/cli": "^2.1.4",
    "@vitest/coverage-v8": "^1.3.0",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0",
    "vitest": "^1.3.0",
    "widdershins": "^4.0.1",
    "wrangler": "^3.28.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
